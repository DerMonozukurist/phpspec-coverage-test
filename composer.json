{
    "name": "mahalay/phpspec-coverage-test",
    "type": "library",
    "description": "PhpSpec extension for testing code coverage",
    "keywords": [
        "phpspec",
        "coverage",
        "report",
        "test",
        "tests",
        "code-coverage",
        "spec"
    ],
    "homepage": "https://github.com/mahalay/phpspec-coverage-test",
    "license": "MIT",
    "authors": [
        {
            "name": "mahalay",
            "email": "antolene@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "phpspec/phpspec": "^6.0 || ^7.0",
        "friends-of-phpspec/phpspec-code-coverage": "^5.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "require-dev": {
        "phpro/grumphp": "^0.19 || ^1.0",
        "symfony/var-dumper": "^5.3 || ^6.0"
    },
    "config": {
        "bin-dir": "bin"
    },
    "suggest": {
        "ext-xdebug": "Install Xdebug to generate phpspec code coverage."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Mahalay\\PhpSpec\\CoverageTest\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "grumphp": "./vendor/bin/grumphp run"
    },
    "support": {
        "issues": "https://github.com/mahalay/phpspec-coverage-test/issues",
        "source": "https://github.com/mahalay/phpspec-coverage-test"
    }
}
