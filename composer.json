{
    "name": "der-monozukurist/phpspec-coverage-test",
    "type": "library",
    "description": "PhpSpec extension for testing code coverage",
    "keywords": [
        "phpspec",
        "coverage",
        "report",
        "test",
        "tests",
        "code-coverage",
        "spec"
    ],
    "homepage": "https://github.com/DerMonozukurist/phpspec-coverage-test",
    "license": "MIT",
    "authors": [
        {
            "name": "DerMonozukurist",
            "email": "5939615+DerMonozukurist@users.noreply.github.co"
        }
    ],
    "require": {
        "php": ">=8.4",
        "phpspec/phpspec": "^8.0",
        "friends-of-phpspec/phpspec-code-coverage": "^7.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^4.0",
        "vimeo/psalm": "^6.13",
        "phpro/grumphp": "^2.15",
        "symfony/var-dumper": "^7.3"
    },
    "config": {
        "bin-dir": "bin",
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "suggest": {
        "ext-xdebug": "For code coverage - more robust alternative to pcov",
        "ext-pcov": "For code coverage - faster alternative to xdebug"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "DerMonozukurist\\PhpSpec\\CoverageTest\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "grumphp": "./vendor/bin/grumphp run"
    },
    "support": {
        "issues": "https://github.com/DerMonozukurist/phpspec-coverage-test/issues",
        "source": "https://github.com/DerMonozukurist/phpspec-coverage-test"
    }
}
